#!/usr/bin/env bash
set -euo pipefail

# Wrapper to launch the GitLab MCP server via Node using a repo-relative path.
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
REPO_ROOT="$(cd "${SCRIPT_DIR}/.." && pwd)"

NODE_BIN="node"
SERVER_JS="${REPO_ROOT}/gitlab-mcp-server.js"

exec "${NODE_BIN}" "${SERVER_JS}"

